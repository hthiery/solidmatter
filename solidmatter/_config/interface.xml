<?xml version="1.0" ?>
<config>
	
	<!-- primary repository, keep it clean! -->
	<site location="frontend.localhost/" type="controller" handler="frontend" subject="demowebsite">
		<storage repository="dev" workspace="dev" user="system" pass="solidbytes" />
		<debug enabled="false" verbose="false" />
		<site location="frontend.localhost/templates" type="controller" handler="xsl" subject="demotemplates" />
		<site location="frontend.localhost/mmm" type="controller" handler="frontend" subject="demofiles" />
	</site>
	<site location="backend.localhost/" type="controller" handler="backend">
		<storage repository="dev" workspace="dev" user="system" pass="solidbytes" />
		<debug enabled="true" verbose="false" />
		<site location="backend.localhost/templates" type="controller" handler="xsl" subject="demotemplates" />
		<site location="backend.localhost/theme" type="theme" handler="backend" theme="_admin_grey" />
		<site location="backend.localhost/favicon.ico" type="passthrough" file="interface/solidmatter.ico" mimetype="" />
	</site>
	<site location="jukebox.localhost/" type="controller" handler="application" subject="demojukebox">
		<storage repository="dev" workspace="dev" user="system" pass="solidbytes" />
		<debug enabled="true" verbose="false" />
		<site location="jukebox.localhost/theme" type="theme" handler="backend" theme="_default" />
		<site location="jukebox.localhost/play" type="controller" handler="jbaudiostream" />
		<site location="jukebox.localhost/favicon.ico" type="passthrough" file="interface/themes/_default/sb_jukebox/jukebox.ico" mimetype="" />
	</site>
	
	<!-- test repository, free to play around -->
	<site location="test.frontend/" type="controller" handler="frontend" subject="demowebsite">
		<storage repository="test" workspace="test" user="system" pass="solidbytes" />
		<debug enabled="false" verbose="false" />
		<site location="test.frontend/templates" type="controller" handler="xsl" subject="demotemplates" />
		<site location="test.frontend/mmm" type="controller" handler="frontend" subject="demofiles" />
	</site>
	<site location="test.jukebox/" type="controller" handler="application" subject="demojukebox">
		<storage repository="test" workspace="test" user="system" pass="solidbytes" />
		<debug enabled="true" verbose="false" />
		<site location="test.jukebox/theme" type="theme" handler="backend" theme="_default" />
		<site location="test.jukebox/play" type="controller" handler="jbaudiostream" />
		<site location="test.jukebox/favicon.ico" type="passthrough" file="interface/themes/_default/sb_jukebox/jukebox.ico" mimetype="" />
	</site>
	<site location="test.backend/" type="controller" handler="backend">
		<storage repository="test" workspace="test" user="system" pass="solidbytes" />
		<debug enabled="true" verbose="false" />
		<site location="test.backend/templates" type="controller" handler="xsl" subject="demotemplates" />
		<site location="test.backend/theme" type="theme" handler="backend" theme="_admin_grey" />
		<site location="test.backend/favicon.ico" type="passthrough" file="interface/solidmatter.ico" />
	</site>
	
	<!-- utilities -->
	<site location="backend.localhost/phpinfo" type="script" handler="phpinfo.php" />
	<site location="backend.localhost/test" type="script" handler="test.php" />
	<site location="frontend.localhost/google" type="redirect" destination="http://www.google.com" />
	
